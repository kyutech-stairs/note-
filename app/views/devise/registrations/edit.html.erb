<div class="container">
  <div class="users-form">
    <h2>設定</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= devise_error_messages! %>
      <div class="row">
        <div class="input-field">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", id: "update_email_form" %>
          <label for="update_email_form">メールアドレス</label>
        </div>

        <div class="input-field">
          <%= f.password_field :current_password, autocomplete: "off", id: "update_password_new" %>
          <label for="update_password_new">現在のパスワード</label>
        </div>

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
        <% end %>

        <div class="input-field">
          <%= f.password_field :password, autocomplete: "off", id: "update_password_form" %>
          <label for="update_password_form">新しいパスワード(変更無しの場合は空白)</label>
        </div>

        <div class="input-field">
          <%= f.password_field :password_confirmation, autocomplete: "off", id: "update_password_confirmation" %>
          <label for="update_password_confirmation">新しいパスワードの確認</label>
        </div>
      </div>

      <div class="row">
        <%= f.submit "Update", class: "btn" %>
      </div>
    <% end %>
    <div class="right enter_links">
      <%= link_to "アカウント削除", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, style:"color: #949494; border-bottom: 1px solid;" %>
    </div>
  </div>
</div>
