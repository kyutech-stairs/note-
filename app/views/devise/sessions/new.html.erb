<div class="container" style="margin-top: 13vh;">
    <h2>ログイン</h2>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="row">
        <div class="input-field">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", id: "email_form"  %>
          <label for="email_form">Mail Adress</label>
        </div>

        <div class="input-field">
          <%= f.password_field :password, autocomplete: "off", id: "password_form"%>
          <label for="password_form">Password</label>
        </div>
        <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
          <%= link_to "パスワードを忘れたら?", new_password_path(resource_name), style:"color: #949494;" %><br />
        <% end -%>
      </div>
      <div class="row">
        <% if devise_mapping.rememberable? -%>
          <label>
             <input type="checkbox" />
             <span>Remember me</span>
          </label>
        <% end -%>
      </div>

      <div class="row">
        <%= f.submit "ログイン", class: "btn" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
</div>
