<% if current_user.liking?(@article)%>
  <%= link_to "", article_like_path(@article.likes.find_by(user_id: current_user.id),
                                    article_id: @article.id),
                                    class: "glyphicon glyphicon-heart like-button",
                                    method: :delete, remote: true %>
<% else %>
  <%= link_to "", article_likes_path(@like, article_id: @article.id),
    class: "glyphicon glyphicon-heart-empty like-button", 
    method: :post, remote: true %>
<%end%>
<%= @article.likes.count %>

