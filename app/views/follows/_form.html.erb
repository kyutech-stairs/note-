<% if current_user.follows?(@article.user)%>
  <%= link_to "follow", user_follow_path(@article.user.follows.find_by(user_id: current_user.id),
                                    follow_id: @article.user.id),
                                    class: "btn btn-orange",
                                    method: :delete, remote: true %>
<% else %>
  <%= link_to "follow", user_follows_path(@follow, user_id: @article.user.id),
    class: "btn btn-white",
    method: :post, remote: true %>
<%end%>
