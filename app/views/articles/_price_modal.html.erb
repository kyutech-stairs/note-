<div class="modal" id="price-modal" tabindex="-1" role="dialog" aria-labelledby="price-modal-label" aria-hidden="true" data-show="true" data-keyboard="false" data-backdrop="static">
  <div class="modal-dialog">
    <div class="modal-content">

      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">
          <span aria-hidden="true">&#215;</span><span class="sr-only">閉じる</span>
        </button>
        <h4 class="modal-title">Article Price</h4>
      </div>
        <%= f.fields_for :price  do |price_form| %>
          <div class="modal-body"  id="price-form">
              <div class="modal-label">
                <h4 class="modal-name">choose free or fee-charging article.</h4>
                <input type="checkbox"　v-on:click="show=!show">free
              </div>
              <div v-show="show">
                  <p>開始価格</p>
                  <!-- <%= price_form.select :min, enum_options_for_select(Price, :min) , {}, {class:"form-control", "v-model" => "selected_min"}%> -->
                  <%= price_form.select :min, enum_options_for_select(Price, :min) , {}, class:"form-control"%>
                  <p>最大価格</p>
                  <%= price_form.select :max, enum_options_for_select(Price, :max), {}, class:"form-control" %>
                  <p>レート</p>
                  <%= price_form.select :rate, enum_options_for_select(Price, :rate), {}, class:"form-control" %>
              </div>
          </div>
        <% end %>
        <div class="modal-footer">
          <%= f.submit "記事を投稿", class: "btn btn-orange" %>
        </div>
    </div>
  </div>
</div>

<script type="text/javascript">
  var vm = new Vue({
    el: "#price-editor",
    data: {
      show: false
    }

  });
</script>

