<div class="sidebar">
  <div class="feed">
    <div class="like-form">
      <%= render 'likes/form'%>
    </div>
    <div class="bad-form">
      <%= render 'bads/form'%>
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-md-8 col-sm-8 col-xs-8 article-body
      offset-xs-1 offset-sm-1 offset-md-1">
      <div class="article-header">
        <div class="article-header-left">
          <span><%= user_image_for(@article.user) %></span>
          <span><%= link_to @article.user.name, @article.user %></span>
          <span class="time"><%= @article.updated_at.strftime('%Y年%m月%d日に更新')%></span>
        </div>
        <!-- 画面右上：current_userなら編集、その他はfollow_buttonを表示 -->
        <div class="article-header-right" id="follow">
          <% if @article.user == current_user%>
            <%= link_to "編集", edit_article_path(@article), class: "btn btn-orange"%>
            <%= link_to "削除", article_path(@article), method: :delete, class: "btn btn-orange"%>
          <% else %>
          <div class="follow-form">
            <%= render 'follows/form', target: @article.user%>
          </div>
          <%end%>
        </div>
      </div>
      <div class="title">
        <h1>
        <%= @article.title %>
        </h1>
      </div>
      <div class="content">
        <% if @article.price.min == 0 %>
          <%= qiita_markdown(@article.content) %>
        <% elsif current_user %>
          <% if current_user.is_purchased?(@article) || current_user==@article.user %>
            <%= qiita_markdown(@article.content) %>
          <% else %>
            <%= qiita_markdown(@article.content[0..100]+"...")%>
            <%= render 'purchases/form'%>
          <% end %>
        <% else %>
            <%= qiita_markdown(@article.content[0..100]+"...")%>
            <%= render 'purchases/form'%>
        <% end %>
      </div>
      <div class="article-footer">
        <div class="feed">
          <div class="like-form">
            <%= render 'likes/form'%>
          </div>
          <div class="bad-form">
            <%= render 'bads/form'%>
          </div>
        </div>
        <div class="social-share-button">
          <%= social_share_button_tag(@article.title,
            allow_sites: %w(twitter pinterest linkedin google_plus)) %>
        </div>
      </div>
    </div>
    <div class="col-md-2 col-sm-2 col-xs-2">
      <div>
        <%= link_to "レビューを書く", reviews_path, class: "btn btn-orange"%></br>
      </div>
      <div class="reviews-show">
        <%= render @reviews %>
      </div>
      <div class="paginate">
        <%= paginate @reviews %>
      </div>
    </div>
    <div class="col-md-8 col-sm-8 col-xs-8 comments
      offset-xs-1 offset-sm-1 offset-md-1">
      <div class="comment-index">
        <%= render @article.comments %>
      </div>
      <div class="comment-form">
        <% if current_user %>
          <%= render 'comments/form'  %>
        <% end %>
      </div>
    </div>
  </div>
  <div id="star-rate">
    <star-rating></star-rating>
  </div>
  <%= javascript_pack_tag 'star'%>
