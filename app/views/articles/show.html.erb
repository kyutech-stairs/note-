<div class="container article-show">
  <div class="row">
    </div>
    <div class="col-md-8 col-sm-8 col-xs-8 article-body 
      col-md-offset-1 col-sm-offset-1 col-xs-offset-1">
      <div class="title">
        <h1>
        <%= @article.title %>
        </h1>
      </div>
      <div class="content">
        <%= qiita_markdown(@article.content) %>
      </div>
    </div>
    <div class="col-md-2 col-sm-2 col-xs-2">
    <% if current_user?(@article.user) %>
      <%= link_to "編集", edit_article_path(@article), class: "btn btn-primary"%>
    <% end %>
  </div>
  <% if current_user %>
    <%= render 'comments/form' %>
  <% end %>
  <% if @article.comments.any? %>
    <% @article.comments.each do |comment|%>
      <%= comment.content%>
    <% end %>
  <% end %>
</div>
