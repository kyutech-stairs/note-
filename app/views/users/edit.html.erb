<div class="container">
  <div class="users-form">
    <h2>プロフィール編集</h2>
    <%= form_for(@user) do |f| %>
      <div class="field">
        <%= f.label :name, "ニックネーム", class: "form-label" %>
        <%= f.text_field :name, placeholder: "ニックネーム", class: "form-control"%>
      </div>
      <div class="field-profile">
        <%= f.label :profile, "自己紹介", class: "form-label" %>
        <%= f.text_area :profile, placeholder: "自己紹介", class: "form-control profile"%>
      </div>
      <div class="field">
        <%= f.file_field :image, accept: 'image/jpg,image/jpeg,image/png,image/gif',
          id: "image-field"  %>
      </div>
      <div class="actions">
        <%= f.submit "更新", class: "btn btn-primary form-control"%>
      </div>
    <% end %>
  </div>
</div>

