<div id="follow_list" class="modal bottom-sheet">
  <div class="modal-content" style="padding: 3vh 0 0 0;">
    <h4 style="padding-left: 3vw;">Follow</h4>
    <ul class="collection">
      <% @user.following.each do |user| %>
        <li class="collection-item avatar valign-wrapper">
          <div class="follow_li">
            <%= link_to user_image_for(user, size: 45), user %>
            <%= link_to user.name, user, class: "user-name valign-wrapper" %>
          </div>
        </li>
      <% end %>
    </ul>
  </div>
</div>
