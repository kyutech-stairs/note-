<div class="review-one">
  <div class="review-article-title">
    <%= article.title %>
    <a href="#" data-toggle="modal" data-target="#article-content-modal">...check contents</a>
    </br>
  </div>
  <div class="modal" id="article-content-modal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <%= qiita_markdown(article.content)%>
        </div>
      </div>
    </div>
  </div>
  <%= form_for reviews_path(@review), html: { class: "review-form"} do |f| %>
    <input type="hidden" value="<%= article.id%>" name="article_id">
    <div class="star">
      <label for="star">hyouka</label></br>
      <input type="radio" name="star" value="1">
      <input type="radio" name="star" value="2">
      <input type="radio" name="star" value="3">
      <input type="radio" name="star" value="4">
      <input type="radio" name="star" value="5">
    </div>
    <div class="review-title">
      <label for="title">titie</label></br>
      <input type="text" name="title" placeholder="タイトル">
    </div>
    <div class="review-content">
      <label for="content">content</label></br>
      <textarea name="content" placeholder="レビュー内容"></textarea></br>
    </div>
    <input type="submit">
  <% end %>
</div>
