<div class="write-review">
  <%= render 'reviews/article_modal', article: article %>
    <%= form_for [@article, @review] do |f| %>
    <input type="hidden" value="<%= article.id%>" name="article_id">
    <input type="hidden" value="">
    <div id="star-rate">
      <% if @review.star %>
        <star-rating :star-size="20" :rating="<%= @review.star %>" @rating-selected="setRating">
        </star-rating>
      <% else %>
        <star-rating :star-size="20" v-model="rating">
        </star-rating>
      <% end %>
      <div v-if="rating">
        <input type="hidden" v-bind:value="rating" name="star">
      </div>
    </div>
    <div class="review-title">
      <label for="title">titie</label></br>
      <input type="text" name="title" placeholder="タイトル" value="<%= @review.title%>">
    </div>
    <div class="review-content">
      <label for="content">content</label></br>
      <textarea name="content" placeholder="レビュー内容"><%= @review.content %></textarea></br>
    </div>
    <input type="submit" class="btn btn-primary">
  <% end %>
</div>
<%= javascript_pack_tag 'star' %>
